    "@typescript-eslint/parser": "^8.24.1",
    "@vitejs/plugin-react": "^5.0.4",
    "@vitest/ui": "^4.0.1",
    "autoprefixer": "^10.4.19",
    "eslint": "^9.21.0",
    "eslint-config-next": "^15.1.7",
    "eslint-config-prettier": "^10.0.1",
    "eslint-plugin-prettier": "^5.2.3",
    "jsdom": "^27.0.1",
    "postcss": "^8.4.39",
    "prettier": "^3.3.2",

    "better-auth": "^1.3.30",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.1.1",
    "graphql": "^16.11.0",
    "inversify": "^7.10.3",
    "lucide-react": "^0.400.0",
    "next": "15.1.7",
    "react": "18.3.1",
